# AutoFix Monorepo - Environment Variables Example
# Copy this file to .env and adjust values as needed

# ==========================================
# Database Configuration
# ==========================================
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=autofix
DB_PASSWORD=autofix123
DB_DATABASE=autofix

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# Kafka Configuration
# ==========================================
KAFKA_BROKERS=kafka:9092

# ==========================================
# JWT Configuration
# ==========================================
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRATION=3600

# ==========================================
# AWS SES (Email) Configuration
# ==========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=fake-access-key
AWS_SECRET_ACCESS_KEY=fake-secret-key
SES_FROM_EMAIL=noreply@autofix.dev

# ==========================================
# Twilio (SMS) Configuration
# ==========================================
TWILIO_ACCOUNT_SID=test-account-sid
TWILIO_AUTH_TOKEN=test-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==========================================
# Firebase (Push Notifications) Configuration
# ==========================================
FIREBASE_PROJECT_ID=autofix-dev

# ==========================================
# Service Ports
# ==========================================
API_GATEWAY_PORT=3000
SVC_AUTH_PORT=3001
SVC_INVENTORY_PORT=3002
SVC_WORK_ORDER_PORT=3003
SVC_NOTIFICATION_PORT=3004
WEB_PORTAL_PORT=3005

# ==========================================
# Service URLs (for inter-service communication)
# ==========================================
AUTH_SERVICE_URL=http://svc-auth:3001
INVENTORY_SERVICE_URL=http://svc-inventory:3002
WORK_ORDER_SERVICE_URL=http://svc-work-order:3003
NOTIFICATION_SERVICE_URL=http://svc-notification:3004

# ==========================================
# Next.js (Web Portal) Configuration
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# ==========================================
# Node Environment
# ==========================================
NODE_ENV=development
